# Server Configuration
PORT=3000
NODE_ENV=development
APP_BASE_URL=http://localhost:3000
MAX_REQUEST_SIZE=10mb
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# Google Ads API Configuration (v21)
# Get these from https://developers.google.com/google-ads/api/docs/first-call/overview
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_customer_id_here
GOOGLE_ADS_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Application Settings
MAX_PAGES_TO_SCAN=20
MAX_KEYWORDS=500
MIN_SEARCH_VOLUME=10
SCRAPER_TIMEOUT=30000

# Gemini API Configuration (for AI-powered keyword extraction)
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Python Microservice Configuration
PYTHON_SERVICE_URL=http://localhost:5001
PYTHON_SERVICE_PORT=5001

# Chrome path for Playwright (if needed in your environment)
# This configures Playwright to use an existing Chrome installation
# It's useful in environments where downloading Chromium is not feasible
CHROME_EXECUTABLE_PATH=C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe

