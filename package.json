{
  "name": "keyword-research-tool",
  "version": "1.0.0",
  "description": "AI-powered keyword research tool with Google Ads API integration, Gemini AI, and intelligent topic clustering",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "start:improved": "set USE_IMPROVED_API=true&& node backend/server-improved.js",
    "dev": "nodemon backend/server.js",
    "dev:improved": "set USE_IMPROVED_API=true&& nodemon backend/server-improved.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flin-agency/keyword-research-tool.git"
  },
  "bugs": {
    "url": "https://github.com/flin-agency/keyword-research-tool/issues"
  },
  "homepage": "https://github.com/flin-agency/keyword-research-tool#readme",
  "keywords": [
    "keyword-research",
    "seo",
    "google-ads",
    "clustering",
    "ai",
    "gemini",
    "machine-learning",
    "nlp",
    "marketing",
    "web-scraping",
    "playwright"
  ],
  "author": "Flin Agency <info@flin.agency>",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.12.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "density-clustering": "^1.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "googleapis": "^161.0.0",
    "json2csv": "^6.0.0-alpha.2",
    "ml-kmeans": "^6.0.0",
    "playwright": "^1.55.1",
    "puppeteer": "^24.23.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/server.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
